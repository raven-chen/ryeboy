<h1>思无邪数据库</h1>

<div class="top-button-area clearfix">
  <%= link_to '新建', new_student_path, :class => "btn btn-primary pull-right" %>
</div>

<div>
  <table class="table table-hover">
    <thead>
      <th width="15%">昵称</th>
      <th width="15%">QQ</th>
      <th width="20%">打卡地址</th>
      <th width="20%">部门</th>
      <th width="20%">电话</th>
      <th width="10%">操作</th>
    </thead>

    <tbody>
      <% if @students.present? -%>
        <% @students.each do |student| %>
        <tr>
          <td><%= link_to student.name, student_path(student) %></td>
          <td><%= student.qq %></td>
          <td><%= link_to "打卡地址", student.exercise_url, :target => "_blank" %></td>
          <td><%= student.group %></td>
          <td><%= student.phone_number %></td>
          <td><%= link_to('编辑', edit_student_path(student)) %></td>
        </tr>
        <% end -%>
      <% else -%>
        <tr>
          <td colspan="4"><%= t("helpers.no_results") %></td>
        </tr>
      <% end -%>
    </tbody>
  </table>
</div>
