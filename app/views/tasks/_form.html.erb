<div>
  <%= form_for(@task) do |f| %>
    <fieldset>
      <legend></legend>

      <label>标题</label>
      <%= f.text_field :name %>

      <div class="checkbox">
        <label>
          <%= f.check_box :common %>
          <%= Task.human_attribute_name("common") %>
        </label>
      </div>

      <label>适用年级</label>
      <%= f.select :grade, User::GRADES %>

      <label>内容</label>
      <%= f.text_area :description, :class => "rich-editor" %>

      <br>
      <%= submit_tag "提交", :class => "btn btn-primary" %>  <%= link_to '返回', manage_tasks_path, :class => "btn btn-default" %>
    </fieldset>
  <% end -%>
</div>
