<div class="highlight-block">
  <%= form_for(@task) do |f| %>
    <div class="form-group">
      <label>标题</label>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="checkbox">
      <label>
        <%= f.check_box :common %>
        <%= Task.human_attribute_name("common") %>
      </label>
    </div>

    <div class="form-group">
      <label>适用年级</label>
      <%= f.select :grade, User::GRADES, {},class: "form-control" %>
    </div>

    <div class="form-group">
      <label>内容</label>
      <%= f.text_area :description, :class => "rich-editor" %>
    </div>

    <div>
      <%= submit_tag "提交", :class => "btn btn-primary" %>  <%= link_to '返回', manage_tasks_path, :class => "btn btn-default" %>
    </div>
  <% end -%>
</div>
