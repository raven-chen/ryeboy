<h1><%= "集体作业" %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th width="200"><%= Task.human_attribute_name("name") %></th>
      <th width="300"><%= Task.human_attribute_name("description") %></th>
      <th width="100"><%= I18n.t("helpers.status") %></th>
      <th width="100"><%= I18n.t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% if @tasks.present? -%>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.name, task_path(task) %></td>
          <td>
            <div class="content">
              <%= task.description %>
            </div>
          </td>
          <td><%= task.finished?(current_user) ? content_tag(:span, I18n.t("helpers.finished"), :class => "alert alert-success") : content_tag(:span, I18n.t("helpers.unfinished"), :class => "alert alert-danger") %></td>
          <td><%= link_to I18n.t("helpers.enter"), task_path(task) %></td>
        </tr>
      <% end %>
    <% else -%>
      <tr>
        <td colpan="4"><%= t("helpers.no_results") %></td>
      </tr>
    <% end -%>
  </tbody>
</table>
