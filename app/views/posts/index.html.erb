<h1>办公区</h1>

<div class="top-button-area clearfix">
  <%= link_to '发帖', new_post_path, :class => "btn btn-primary pull-right" %>
</div>

<div class="searchfield-above-table">
  <% Post::CATEGORIES.each_with_index do |category, i| -%>
    <%= link_to category, posts_path(category: category), :class => "btn btn-default" %>
  <% end -%>
</div>

<div>
  <% if @posts.present? -%>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>标题</th>
          <th>所属部门</th>
          <th>回复数</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= link_to post.name, post %></td>
            <td><%= post.category %></td>
            <td><%= post.comments.count %></td>
            <td>
              <div class="operations">
                <%= actions_on_object post, current_user %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else -%>
    <div class="well no-result">
      <%= t("helpers.no_results") %>
    </div>
  <% end -%>
</div>

<%= paginate @posts %>
