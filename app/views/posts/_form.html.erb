<div class="highlight-block">
  <%= form_for(@post) do |f| %>
    <div class="form-group">
      <label>标题</label>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>组</label>
      <%= f.select :category, Post::CATEGORIES, {}, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>内容</label>
      <%= f.text_area :content, :class => "rich-editor" %>
    </div>

    <div>
      <%= submit_tag "提交", :class => "btn btn-primary" %>  <%= link_to '返回', posts_path, :class => "btn btn-default" %>
    </div>
  <% end -%>
</div>
