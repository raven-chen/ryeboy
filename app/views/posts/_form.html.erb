<div>
  <%= form_for(@post) do |f| %>
    <fieldset>
      <legend></legend>

      <label>标题</label>
      <%= f.text_field :name %>

      <label>组</label>
      <%= f.select :category, Post::CATEGORIES %>

      <label>内容</label>
      <%= f.text_area :content, :class => "rich-editor" %>

      <br>
      <%= submit_tag "提交", :class => "btn btn-primary" %>  <%= link_to '返回', posts_path, :class => "btn btn-default" %>
    </fieldset>
  <% end -%>
</div>
