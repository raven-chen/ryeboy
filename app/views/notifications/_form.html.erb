<div class="highlight-block">
  <%= form_for(@notification) do |f| %>
    <div class="form-group">
      <label>标题</label>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>通知对象</label>
      <%= f.select :grade, User::GRADES, { include_blank: "全员" }, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>类型</label>
      <%= f.select :category, Notification::CATEGORIES, {}, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>内容</label>
      <%= f.text_area :content, :class => "rich-editor" %>
    </div>

    <div>
      <%= submit_tag "提交", :class => "btn btn-primary" %>  <%= link_to '返回', notifications_path, :class => "btn btn-default" %>
    </div>
  <% end -%>
</div>
