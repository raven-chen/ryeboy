<h1>通知</h1>

<div class="searchfield-above-table">
  <% Notification::CATEGORIES.each_with_index do |category, i| -%>
    <%= link_to category, list_view_notifications_path(category: category), :class => maybe_selected_class(category, @options[:category], "btn btn-default", "btn btn-warning") %>
  <% end -%>
</div>

<div class="highlight-block">
  <% if @notifications.present? -%>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>标题</th>
          <th>内容</th>
          <th>类型</th>
        </tr>
      </thead>
      <tbody>
        <% @notifications.each do |notification| %>
          <tr>
            <td><%= link_to notification.name, notification_path(notification) %></td>
            <td><%= truncate(notification.content, length: 40) %></td>
            <td><%= notification.category %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else -%>
    <div class="well no-result">
      <%= t("helpers.no_results") %>
    </div>
  <% end -%>
</div>
