<h2>今日未打卡功课</h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th>功课名称</th>
      <th>功课内容</th>
      <th>打卡</th>
    </tr>
  </thead>

  <tbody>
    <% if unsigned_tasks_today.present? -%>
      <% unsigned_tasks_today.each do |task| -%>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td><%= link_to("打卡", new_exercise_path(:task_id => task.id)) %></td>
      </tr>
      <% end -%>
    <% else -%>
      <tr>
        <td colspan="3">
          <div class="alert alert-success">
            <%= I18n.t("notices.good_job") %>
          </div>
        </td>
      </tr>
    <% end -%>
  </tbody>
</table>

<h2>功课列表</h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th>功课名称</th>
      <th>功课内容</th>
      <th>打卡</th>
    </tr>
  </thead>

  <tbody>
    <% Task.all.each do |task| -%>
    <tr>
      <td><%= task.name %></td>
      <td><%= task.description %></td>
      <td><%= link_to("打卡", new_exercise_path(:task_id => task.id)) %></td>
    </tr>
    <% end -%>
  </tbody>
</table>

<h2>我的打卡</h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th>功课名称</th>
      <th>打卡日期</th>
      <th>打卡内容</th>
      <th>操作</th>
    </tr>
  </thead>

  <tbody>
    <% current_user.exercises.limit(10).each do |exercise| -%>
    <tr>
      <td><%= exercise.task.name %></td>
      <td><%= exercise.date %></td>
      <td><%= exercise.content %></td>
      <td><%= link_to "编辑", edit_exercise_path(exercise) %></td>
    </tr>
    <% end -%>
    <tr><td colspan="4" style="text-align:center;"><%= link_to "更多...", my_exercises_path %></td></tr>
  </tbody>
</table>

