<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: "centered-form" }) do |f| %>
  <h2>注册</h2>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, :autofocus => true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "至少8位", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, placeholder: "至少8位", class: "form-control" %>
  </div>

  <%= f.submit "注册", class: "btn btn-primary" %>
<% end %>
