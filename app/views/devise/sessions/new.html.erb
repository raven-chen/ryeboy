<div class="pull-left">
  <h2>登陆</h2>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => "form-horizontal") do |f| %>
    <div class="control-group">
      <%= f.label :email %>
      <%= f.email_field :email, :autofocus => true %>
    </div>

    <div  class="control-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="checkbox">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div>
      <%= f.submit "登陆", :class => "btn btn-primary" %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>

<div class="well pull-left guest-notice">
  <h3>游客可访问</h3>

  <%= link_to t("menus.exercises"), exercises_path %>

  <%= link_to t("menus.topics"), topics_path %>

  <%= link_to t("menus.documents"), documents_path %>
</div>
