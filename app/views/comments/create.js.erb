<% if @comment.persisted? %>
  $("<%= "#comments-of-#{@comment.commentable.id}"%>").append("<%= escape_javascript(render(partial: 'show', locals: { comment: @comment })) %>");
  $("<%= "#new-comment-for-#{@comment.commentable.id}"%>").html(""); // Remove submitted form
<% else %>
  $("<%= "#new-comment-for-#{@comment.commentable.id}-errors"%>").html("<%= @notice %>"); // Show error notice
<% end %>
