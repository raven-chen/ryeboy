        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to brand_name, root_path, :class => "brand" %>
      <div class="container nav-collapse">
        <ul class="nav">
            <li><%= link_to t("menus.homepage"), root_path if user_signed_in? %></li>

            <li><%= link_to t("menus.exercises"), exercises_path %></li>

            <li><%= link_to t("menus.topics"), topics_path %></li>

            <li><%= link_to t("menus.homework"), tasks_path if user_signed_in? %></li>

            <li><%= link_to t("menus.documents"), documents_path %></li>

            <% if current_user.try(:generalized_mentor?) -%>
