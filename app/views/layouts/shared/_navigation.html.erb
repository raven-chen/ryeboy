              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">学长专区<span class="caret"></span></a>

              <ul class="dropdown-menu">
                <% if can? :read, Post -%>
                  <li><%= link_to '办公区', posts_path %></li>
                <% end -%>

