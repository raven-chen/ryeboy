<% if current_user -%>
  <% new_features = new_features(current_user) -%>
  <% if new_features.present? -%>
    <%= render partial: "notifications/popup", locals: { notifications: new_features, trigger_text_key: "notifications.new_features_%count_html", popup_title_key: "notifications.new_features", category: "newFeatures" } %>
  <% end -%>

  <% new_notices = new_notices(current_user) -%>
  <% if new_notices.present? -%>
    <%= render partial: "notifications/popup", locals: { notifications: new_notices, trigger_text_key: "notifications.new_notices_%count_html", popup_title_key: "notifications.new_notices", category: "newNotices" } %>
  <% end -%>
<% end -%>
