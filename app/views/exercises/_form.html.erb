<div class="log-exercise">
  <%= form_for(@exercise) do |f| %>
    <fieldset>
      <legend><%= @exercise.task.try(:name) %></legend>
      <%= f.hidden_field :task_id, :value => @exercise.task.id %>

      <div class="alert alert-warning">
        <%= I18n.t("notices.religion_notice") %>
      </div>

      <% if @exercise.task.description.present? -%>
        <div class="task-description">
          <%= @exercise.task.description.html_safe %>
        </div>
      <% end -%>

      <label class="main">日期</label>
      <%= f.text_field :date, :class => "js-date-field" %>

      <div class="checkbox">
        <label><%= f.check_box :ask_for_comment %> <span>求点评</span> <span class="hint-text">(勾选此项，表示你希望此日记收到同学们的点评!)</span></label>
      </div>

      <div class="checkbox">
        <label><%= f.check_box :visible_to_mentor_only %> <span class="text-danger">仅对学长可见</span> <span class="hint-text">(勾选此项, 你的日记只会被学长看到, 对其它学员不可见)</span></label>
      </div>

      <label class="main content">内容</label>
      <button id="clean-editor" type="button" class="btn btn-link">清空内容</button>
      <%= f.text_area :content, :class => "rich-editor" %>
      <br>

      <%= submit_tag "提交", class: "btn btn-primary" %>
    </fieldset>
  <% end -%>
</div>
