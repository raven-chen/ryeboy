<div>
  <%= form_for(@exercise) do |f| %>
    <fieldset>
      <legend><%= @exercise.task.try(:name) %>　打卡</legend>
      <%= f.hidden_field :task_id, :value => @exercise.task.id %>
      <div class="task-description">
        <%= @exercise.task.description %>
      </div>

      <label>日期</label>
      <%= f.text_field :date, :class => "js-date-field" %>
      <label>内容</label>
      <%= f.text_area :content, :class => "rich-editor" %>
      <br>
      <%= submit_tag "提交" %>
    </fieldset>
  <% end -%>
</div>
