<div>
  <%= form_for(@exercise) do |f| %>
    <fieldset>
      <legend><%= @exercise.task.try(:name) %>　日记</legend>
      <%= f.hidden_field :task_id, :value => @exercise.task.id %>

      <div class="alert alert-warning">
        <%= I18n.t("notices.religion_notice") %>
      </div>

      <% if @exercise.task.description.present? -%>
        <div class="task-description">
          <%= @exercise.task.description.html_safe %>
        </div>
      <% end -%>

      <label>日期</label>
      <%= f.text_field :date, :class => "js-date-field" %>

      <div class="checkbox">
        <label><%= f.check_box :ask_for_comment %> <span class="text-danger">求点评</span> <span class="hint-text">(勾选此项，表示你希望此日记收到同学们的点评!)</span></label>
      </div>

      <label>内容</label>
      <button id="clean-editor" type="button">清空内容</button>
      <%= f.text_area :content, :class => "rich-editor" %>
      <br>

      <%= submit_tag "提交" %>
    </fieldset>
  <% end -%>
</div>
