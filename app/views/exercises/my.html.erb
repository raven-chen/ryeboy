<h2>我的日记</h2>

<%= form_tag(my_exercises_path, :method => :get, :class => "form-inline js-submit-on-change", :role => "form") do %>
  <div class="searchfield-above-table">
    <%= select_tag :task_id, options_from_collection_for_select(Task.all, "id", "name", @task_id), :prompt => "功课" %>
    <%= text_field_tag :date, @date, :class => "js-date-field", :placeholder => "日期" %>
  </div>
<% end -%>

<table class="table table-hover">
  <thead>
    <tr>
      <th>功课名称</th>
      <th>日记日期</th>
      <th>日记内容</th>
      <th>操作</th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| -%>
    <tr>
      <td><%= exercise.read_task(:name) %></td>
      <td><%= exercise.date %></td>
      <td><%= exercise.content %></td>
      <td><%= link_to "编辑", edit_exercise_path(exercise) %></td>
    </tr>
    <% end -%>
  </tbody>
</table>
