<table class="table table-hover">
  <thead>
    <th width="70%">话题</th>
    <th width="10%">作者</th>
    <th width="5%">回复</th>
    <th width="15%">最后回应</th>
  </thead>

  <tbody>
    <% if topics.present? -%>
      <% topics.each do |topic| %>
      <tr>
        <td><%= link_to topic.title, topic_path(topic) %></td>
        <td><%= topic.author.name %></td>
        <td><%= topic.replies.count %></td>
        <td><%= topic.updated_at.strftime(t("time.formats.default")) %></td>
      </tr>
      <% end -%>
    <% else -%>
      <tr>
        <td colspan="4"><%= t("helpers.no_results") %></td>
      </tr>
    <% end -%>
  </tbody>
</table>
