<div>
  <%= form_for(@topic) do |f| %>
    <fieldset>
      <legend></legend>

      <label>标题</label>
      <%= f.text_field :title %>
      <label>内容</label>
      <%= f.cktext_area :content, :class => "ckeditor" %>
      <br>
      <%= submit_tag "提交", :class => "btn btn-primary" %>  <%= link_to '返回', topics_path, :class => "btn btn-default" %>
    </fieldset>
  <% end -%>
</div>
